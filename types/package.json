{
  "name": "@rexera/types",
  "version": "1.0.0",
  "description": "Shared TypeScript types for Rexera 2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "setup": "npm install"
  },
  "devDependencies": {
    "typescript": "^5.2.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./database": {
      "types": "./dist/database.d.ts",
      "default": "./dist/database.js"
    },
    "./api": {
      "types": "./dist/api.d.ts", 
      "default": "./dist/api.js"
    },
    "./agents": {
      "types": "./dist/agents.d.ts",
      "default": "./dist/agents.js"
    },
    "./workflows": {
      "types": "./dist/workflows.d.ts",
      "default": "./dist/workflows.js"
    }
  }
}