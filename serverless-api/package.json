{
  "name": "@rexera/api",
  "version": "1.0.0",
  "description": "API endpoints for Rexera 2.0",
  "private": true,
  "scripts": {
    "start": "vercel dev --listen 3001",
    "dev": "tsx src/server/express-server.ts",
    "build": "tsc",
    "test": "tsx tests/utils/test-runner.ts",
    "test:integration": "tsx tests/integration.test.ts",
    "test:smoke": "tsx tests/smoke.test.ts",
    "seed": "tsx scripts/seed-database.ts",
    "notifications": "tsx scripts/notifications.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .vercel dist"
  },
  "dependencies": {
    "@rexera/shared": "workspace:*",
    "@supabase/supabase-js": "^2.38.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.0",
    "eslint": "^8.53.0",
    "tsx": "^4.20.3",
    "typescript": "^5.2.2",
    "vercel": "^44.2.11"
  }
}
