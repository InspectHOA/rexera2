{
  "name": "@rexera/api",
  "version": "1.0.0",
  "description": "API endpoints for Rexera 2.0",
  "private": true,
  "scripts": {
    "start": "tsx src/dev-server.ts",
    "dev": "npm run type-check && npm run openapi:generate && tsx src/dev-server.ts",
    "dev:watch": "concurrently \"npm run openapi:watch\" \"tsx watch src/dev-server.ts\"",
    "build": "npm run type-check && npm run openapi:generate && tsc",
    "test": "npm run type-check && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:open": "jest --coverage && open coverage/lcov-report/index.html",
    "test:coverage:ci": "jest --coverage --coverageReporters=cobertura --coverageReporters=lcov",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:smoke": "tsx tests/smoke-runner.ts",
    "test:verbose": "jest --verbose",
    "test:debug": "jest --detectOpenHandles --forceExit",
    "seed": "tsx scripts/seed-database.ts",
    "notifications": "tsx scripts/notifications.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "openapi:generate": "tsx scripts/generate-openapi.ts",
    "openapi:watch": "tsx watch scripts/generate-openapi.ts",
    "clean": "rm -rf .vercel dist coverage"
  },
  "dependencies": {
    "@hono/node-server": "^1.15.0",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^0.19.9",
    "@rexera/shared": "workspace:*",
    "@supabase/supabase-js": "^2.38.0",
    "@vercel/node": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "hono": "^4.8.4",
    "next": "^14.0.0",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "concurrently": "^9.2.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.3",
    "typescript": "^5.2.2",
    "vercel": "^44.2.11"
  }
}
