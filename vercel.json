{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "frontend/.next",
  "functions": {
    "apis/src/**/*.ts": {
      "runtime": "@vercel/node@3.0.12",
      "maxDuration": 60
    },
    "apis/src/agents/**/*.ts": {
      "runtime": "@vercel/node@3.0.12", 
      "maxDuration": 120
    },
    "apis/src/workflows/**/*.ts": {
      "runtime": "@vercel/node@3.0.12",
      "maxDuration": 180
    },
    "apis/src/webhooks/**/*.ts": {
      "runtime": "@vercel/node@3.0.12",
      "maxDuration": 31
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/apis/src/$1"
    }
  ]
}