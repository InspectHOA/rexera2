{
  "version": 2,
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/.next",
  "installCommand": "npm install",
  "functions": {
    "api/src/**/*.ts": {
      "runtime": "@vercel/node@3.0.12",
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/src/$1"
    }
  ]
}