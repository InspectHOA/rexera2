{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true,         // ✅ Add this to ensure dev server keeps running
      "parallel": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",                // ✅ Backend build output
        ".next/**",               // ✅ Next.js output
        "!.next/cache/**"         // ✅ Ignore cache
      ]
    },
    "test": {
      "dependsOn": ["^build"],    // ✅ Fix: ensure upstream dependencies build too
      "outputs": ["coverage/**"]
    },
    "lint": {
      "outputs": [],
      "cache": false              // ✅ Add: disable cache for lint
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": false              // ✅ Add: disable cache for type-check
    },
    "clean": {
      "cache": false,
      "outputs": []               // ✅ Add: no outputs to track
    }
  }
}
