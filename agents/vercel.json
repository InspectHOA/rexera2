{
  "version": 2,
  "name": "rexera-agents",
  "buildCommand": "cd .. && npm install && npm run build --filter=@rexera/agents",
  "outputDirectory": "dist",
  "installCommand": "cd .. && npm install",
  "rootDirectory": "agents",
  "functions": {
    "dist/**/*.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 300,
      "memory": 1024
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/dist/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}
