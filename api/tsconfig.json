{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@rexera/types": ["../packages/types/src"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "references": [
    {
      "path": "../packages/types"
    }
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".vercel"
  ]
}