{
  "name": "@rexera/api",
  "version": "1.0.0",
  "description": "API endpoints for Rexera 2.0",
  "private": true,
  "scripts": {
    "dev": "node -r ts-node/register src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:health": "jest health-simple.test.ts",
    "test:unit": "jest --testPathPattern=__tests__ --testNamePattern='(health-simple|middleware)' --verbose",
    "clean": "rm -rf dist .vercel",
    "setup": "npm install"
  },
  "dependencies": {
    "@rexera/types": "file:../types",
    "@rexera/schemas": "file:../packages/schemas",
    "@supabase/supabase-js": "^2.38.0",
    "@trpc/server": "^11.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "jose": "^5.1.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
